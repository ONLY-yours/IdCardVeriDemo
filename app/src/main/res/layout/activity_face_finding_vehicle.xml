<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.vehicleidenti.FaceFindingVehicleActivity">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="58dp"
        android:text="人脸识别中，请注视屏幕"
        android:textColor="#101010"
        android:textSize="48sp"
        android:layout_marginLeft="368dp"
        android:layout_marginRight="383dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#101010"
        android:text="请保证人脸一直处于方框内"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/iv_face_finding_vehicle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_black"
        app:layout_constraintLeft_toLeftOf="@id/iv_face_finding_vehicle"
        app:layout_constraintRight_toRightOf="@id/iv_face_finding_vehicle"
        app:layout_constraintTop_toTopOf="@id/iv_face_finding_vehicle"
        app:layout_constraintBottom_toBottomOf="@id/iv_face_finding_vehicle"/>

    <View
        android:id="@+id/view_next"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@drawable/circle_white"
        app:layout_constraintLeft_toLeftOf="@id/iv_face_finding_vehicle"
        app:layout_constraintRight_toRightOf="@id/iv_face_finding_vehicle"
        app:layout_constraintTop_toTopOf="@id/iv_face_finding_vehicle"
        app:layout_constraintBottom_toBottomOf="@id/iv_face_finding_vehicle"/>



</android.support.constraint.ConstraintLayout>