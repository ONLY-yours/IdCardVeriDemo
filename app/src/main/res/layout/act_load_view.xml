<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.checkIn.LoadViewActivity">




    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/iv_firstbak"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view_next"
        android:layout_width="292dp"
        android:layout_height="67dp"
        android:background="@drawable/roundclick"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="轻点屏幕开始"
        android:textSize="36sp"
        android:gravity="center"
        android:textColor="@color/liteGray"
        app:layout_constraintLeft_toLeftOf="@id/view_next"
        app:layout_constraintRight_toRightOf="@id/view_next"
        app:layout_constraintTop_toTopOf="@id/view_next"
        app:layout_constraintBottom_toBottomOf="@id/view_next"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="#ffffff"
        android:text="无与伦比大酒店\n自助入住系统"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>