<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.vehicleidenti.LicenseSearchActivity">
    <Spinner
        android:id="@+id/sp_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/sp_letter"
        android:entries="@array/provarray"/>
    <Spinner
        android:id="@+id/sp_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sp_province"
        app:layout_constraintRight_toLeftOf="@id/v_license"
        android:entries="@array/letter"
        />
    <View
        android:id="@+id/v_license"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toLeftOf="@id/v_block"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="请输入车牌号"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@id/v_license"
        app:layout_constraintRight_toRightOf="@id/v_license"
        app:layout_constraintTop_toTopOf="@id/v_license"
        app:layout_constraintBottom_toBottomOf="@id/v_license"/>

    <LinearLayout
        android:id="@+id/v_block"
        android:layout_width="395dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical" >
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="@id/block"
                app:layout_constraintRight_toRightOf="@id/block"
                app:layout_constraintTop_toTopOf="@id/block">

                <Button
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#BBBBBB"
                    android:text="1"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/view3"
                    android:layout_width="0dp"
                    android:text="3"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:layout_weight="1"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="@id/block"
                app:layout_constraintRight_toRightOf="@id/block"
                app:layout_constraintTop_toBottomOf="@id/ll1">

                <Button
                    android:id="@+id/view4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/view5"
                    android:layout_width="0dp"
                    android:text="5"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:layout_weight="1"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/view6"
                    android:layout_width="0dp"
                    android:text="6"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:layout_weight="1"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="@id/block"
                app:layout_constraintRight_toRightOf="@id/block"
                app:layout_constraintTop_toBottomOf="@id/ll2">

                <Button
                    android:id="@+id/view7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/view8"
                    android:layout_width="0dp"
                    android:text="8"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:layout_weight="1"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/view9"
                    android:layout_width="0dp"
                    android:text="9"
                    android:textSize="48sp"
                    android:textColor="#101010"
                    android:layout_weight="1"
                    android:background="#BBBBBB"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="@id/block"
                app:layout_constraintRight_toRightOf="@id/block"
                app:layout_constraintTop_toBottomOf="@id/ll3">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/view_delete"
                        android:layout_width="match_parent"
                        android:text="清除"
                        android:textSize="28sp"
                        android:textColor="#101010"
                        android:background="#BBBBBB"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/view0"
                        android:layout_width="match_parent"
                        android:text="0"
                        android:textSize="48sp"
                        android:textColor="#101010"
                        android:background="#BBBBBB"
                        android:layout_height="match_parent"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/view_back"
                        android:layout_width="48dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_back"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/block_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <View
                android:id="@+id/view_next"
                android:layout_width="132dp"
                android:layout_height="88dp"
                android:layout_marginBottom="104dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/block_2"
                app:layout_constraintRight_toRightOf="@id/block_2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="36sp"
                android:text="确认"
                android:gravity="center"
                android:textColor="#101010"
                app:layout_constraintLeft_toLeftOf="@id/view_next"
                app:layout_constraintTop_toTopOf="@id/view_next"
                app:layout_constraintBottom_toBottomOf="@id/view_next"
                app:layout_constraintRight_toRightOf="@id/view_next"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>