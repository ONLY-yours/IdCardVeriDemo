<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1280dp"
    android:layout_height="720dp"
    tools:context=".activity.checkIn.ConfireOrderActivity">

    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="466dp"
        android:layout_height="54dp"
        android:text="徐**先生，请输入订单确认号"
        android:textSize="36sp"
        android:textColor="#101010"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="800dp"
        android:layout_height="29dp"
        android:text="预定成功时，订单确认号已短信发送至预定人手机，若你尚未预定房间，请呼叫大堂经理"
        android:textSize="20sp"
        android:textColor="#4C4C4D"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/btnBack"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/ic_back_off"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:layout_width="112dp"
        android:layout_height="41dp"
        android:text="呼叫经理"
        android:textColor="#C14141"
        android:textSize="28sp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="41dp"
        android:background="#BBBBBB"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintLeft_toRightOf="@id/btnBack"/>

    <View
        android:id="@+id/block"
        android:layout_width="395dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll1"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintLeft_toLeftOf="@id/block"
        app:layout_constraintRight_toRightOf="@id/block"
        app:layout_constraintTop_toTopOf="@id/block">

        <Button
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:text="1"
            android:textSize="48sp"
            android:textColor="#101010"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="48sp"
            android:textColor="#101010"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:text="3"
            android:textSize="48sp"
            android:textColor="#101010"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintLeft_toLeftOf="@id/block"
        app:layout_constraintRight_toRightOf="@id/block"
        app:layout_constraintTop_toBottomOf="@id/ll1">

        <Button
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="48sp"
            android:textColor="#101010"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:text="5"
            android:textSize="48sp"
            android:textColor="#101010"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:text="6"
            android:textSize="48sp"
            android:textColor="#101010"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll3"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintLeft_toLeftOf="@id/block"
        app:layout_constraintRight_toRightOf="@id/block"
        app:layout_constraintTop_toBottomOf="@id/ll2">

        <Button
            android:id="@+id/view7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="48sp"
            android:textColor="#101010"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/view8"
            android:layout_width="0dp"
            android:text="8"
            android:textSize="48sp"
            android:textColor="#101010"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/view9"
            android:layout_width="0dp"
            android:text="9"
            android:textSize="48sp"
            android:textColor="#101010"
            android:layout_weight="1"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll4"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintLeft_toLeftOf="@id/block"
        app:layout_constraintRight_toRightOf="@id/block"
        app:layout_constraintTop_toBottomOf="@id/ll3">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/view_delete"
            android:layout_width="match_parent"
            android:text="清除"
            android:textSize="28sp"
            android:textColor="#101010"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/view0"
            android:layout_width="match_parent"
            android:text="0"
            android:textSize="48sp"
            android:textColor="#101010"
            android:background="#BBBBBB"
            android:layout_height="match_parent"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/view_back"
                android:layout_width="48dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"/>
        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>